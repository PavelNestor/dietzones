  .news
    .news__col
      .news__img
        +picturePng(options.path, options.alt='')
    .news__col
      h3.news__title= options.title
      .editors-card__text.news__text= options.text
      .editors-card__subtitle.news__subtitle= options.subtitle
      +card-footer(options.date, options.looks, options.comments)

mixin line-with-dot()
