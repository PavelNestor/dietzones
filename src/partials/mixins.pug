    .line-with-dot__line

mixin comment(options)
  .user-comment
    .user-comment__col
      .user-comment__img
        +picturePng(options.user_img)

    .user-comment__col
      .user-comment__header
        .user-comment__title-wrap
          .user-comment__name= options.user_name
          .user-comment__date= options.date
        .user-comment__reply-wrap
          .user-comment__reply-text Relpy
          button.user-comment__reply-btn +
          button.user-comment__reply-btn -
          .user-comment__reply-liks= options.like

      .user-comment__text= options.text

